#!/bin/bash

set -eu

if [[ $# != 2 && $# != 3 ]]; then
    echo "Usage: $0 host key [default]" >&2
    exit 1;
fi

if ! VALUE=$(ymlook $BETTERSSH_CONFIG "$1" "$2" ); then
    exit 1
fi

if [[ $VALUE != "" ]]; then
    echo $VALUE
    exit 0
fi

if [[ $# == 3 ]]; then
    echo $3
    exit 0
fi

exit 1
